
.button
  position relative
  min-width 88px
  width 150px
  margin 6px auto
  border-radius 3px
  color #FFF
  background-color #FF4081
  box-shadow 0 0px 2px rgba(0, 0, 0, 0.12)
              0 2px 2px rgba(0, 0, 0, 0.2)
  text-transform uppercase
  font-weight 500
  transition all .2s ease-in-out
  height 36px
  padding 0 26px
  border none
  text-align center
  white-space nowrap
  overflow hidden
  line-height 36px

  &:hover
    background-color darken(#FF4081, 10%)
