
:global
  .row.full
    max-width 100%

// Colors
$shade1 = #FFFFF3
$shade2 = #E0E3DA
$shade3 = #253238
$shade4 = #CCCCCC

.calculator
  font-weight 300
  background-color #FF4081
  padding 4px
  margin-top 30px
  h3
    color #FFF
    font-weight 300
    text-align center

.bmiResultContainer
  background-color $shade3
  padding 20px 10px
  text-align center

.bmiResult
  width 100%
  text-align center
  font-weight 400

.bmiResultNumber
  display block
  width 100%
  font-size 16px
  padding 4px 0
  color $shade2


// TODO
.bmiResultWeight
  display block
  width 100%
  padding 4px 0
  text-transform uppercase
  font-size 18px
  font-weight 400
  color $shade2


.bmiInput
  background-color $shade3
  padding 20px 4px
  box-sizing border-box
  width 100%
  position relative
  text-align center

.inputFields
  width 100%

.inputGroup
  width 100%
  margin-bottom 10px

.label
  color #FFF
  width 25%
  display inline-block
  line-height 26px
  padding 2px 10px 2px 0
  font-weight 300
  background none
  text-align right
  border 1px solid $shade4
  box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.1)
